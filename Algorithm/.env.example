## FTIP System - Local defaults
# Copy to .env and adjust as needed.

# App
PORT=8000
FTIP_PUBLIC_DOCS=1
FTIP_ALLOWED_ORIGINS=http://localhost:8000

# Database (Postgres)
FTIP_DB_ENABLED=1
FTIP_DB_WRITE_ENABLED=1
FTIP_DB_READ_ENABLED=1
FTIP_MIGRATIONS_AUTO=1
FTIP_DB_REQUIRED=0
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ftip

# Auth (set in production)
FTIP_API_KEY=demo-key
# FTIP_API_KEYS=key-1,key-2

# LLM / Narrator (optional)
FTIP_LLM_ENABLED=0
OPENAI_API_KEY=
FTIP_LLM_MODEL=gpt-4o-mini
FTIP_LLM_MAX_TOKENS=700
FTIP_LLM_TEMPERATURE=0.2

# Rate limiting
FTIP_RATE_LIMIT_RPM=60
